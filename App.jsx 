    <img src="https://via.placeholder.com/150" alt="avatar" style={{ borderRadius: '50%' }} />
    <h3>Desarrollador React</h3>
    <p>Editando mi primer componente en la nube.</p>
  </div>
)

export default function App() {
  return <Card />
}
